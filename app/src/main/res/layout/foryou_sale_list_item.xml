<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/foryou_saleImage"
    android:layout_width="88dp"
    android:layout_height="83dp"
    android:src="@drawable/produce"
    app:riv_corner_radius="10dp"
    android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/foryou_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/foryou_saleImage"
        android:src="@drawable/ic_add"/>

    <TextView
        android:id="@+id/foryou_salePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$6.55/kg"
        android:fontFamily="@font/roboto"
        android:layout_below="@id/foryou_saleImage"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/foryou_saleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fry chicken"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/foryou_salePrice"/>

</RelativeLayout>